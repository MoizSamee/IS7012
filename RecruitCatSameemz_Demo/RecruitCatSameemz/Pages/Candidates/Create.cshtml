@page
@model RecruitCatSameemz.Pages.Candidates.CreateModel

@{
    ViewData["Title"] = "Create Candidate";
}

<h1>Create a new Candidate</h1>

<h4>New Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Candidate.FirstName" class="control-label"></label>
                <input asp-for="Candidate.FirstName" class="form-control" />
                <span asp-validation-for="Candidate.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.LastName" class="control-label"></label>
                <input asp-for="Candidate.LastName" class="form-control" />
                <span asp-validation-for="Candidate.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetSalary" class="control-label"></label>
                <input asp-for="Candidate.TargetSalary" class="form-control" />
                <span asp-validation-for="Candidate.TargetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.StartDate" class="control-label"></label>
                <input asp-for="Candidate.StartDate" class="form-control" />
                <span asp-validation-for="Candidate.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Company.ComapyName" class="control-label"></label>
                <select asp-for="Candidate.CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                <span asp-validation-for="Candidate.CompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.JobTitle.Title" class="control-label"></label>
                <select asp-for="Candidate.JobTitleId" class="form-control" asp-items="ViewBag.JobTitleId"></select>
                <span asp-validation-for="Candidate.JobTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Industry.IndustryName" class="control-label"></label>
                <select asp-for="Candidate.IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                <span asp-validation-for="Candidate.IndustryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.CurrentEmployer" class="control-label"></label>
                <input asp-for="Candidate.CurrentEmployer" class="form-control" />
                <span asp-validation-for="Candidate.CurrentEmployer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Address" class="control-label"></label>
                <textarea asp-for="Candidate.Address" class="form-control" ></textarea>
                <span asp-validation-for="Candidate.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.PhoneNo" class="control-label"></label>
                <input asp-for="Candidate.PhoneNo" class="form-control" />
                <span asp-validation-for="Candidate.PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Gender" class="control-label"></label>
                <input asp-for="Candidate.Gender" class="form-control" />
                <span asp-validation-for="Candidate.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.ExpInYears" class="control-label"></label>
                <input asp-for="Candidate.ExpInYears" class="form-control" />
                <span asp-validation-for="Candidate.ExpInYears" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.SSN" class="control-label"></label>
                <input asp-for="Candidate.SSN" class="form-control" />
                <span asp-validation-for="Candidate.SSN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Email" class="control-label"></label>
                <input asp-for="Candidate.Email" class="form-control" />
                <span asp-validation-for="Candidate.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
